/* ===================================================================
   ChefChat - Modern Premium Theme
   Inspired by Claude Code / Linear / GitHub Dark
   =================================================================== */

/* CSS Variables - Premium Dark Palette */
$primary-bg: #0d1117;
$secondary-bg: #161b22;
$surface: #21262d;
$panel-border: #30363d;
$text-primary: #e6edf3;
$text-muted: #7d8590;
$accent: #58a6ff;
$accent-dim: #388bfd;
$success: #3fb950;
$warning: #d29922;
$error: #f85149;
$info: #58a6ff;
$purple: #a371f7;

/* ===================================================================
   Main Application Layout
   =================================================================== */

Screen {
    background: $primary-bg;
    color: $text-primary;
}

/* The Kitchen - Main 3-Pane Grid Layout */
#kitchen-grid {
    layout: grid;
    grid-size: 2 2;
    grid-columns: 35% 1fr;
    grid-rows: 1fr 3fr;
    grid-gutter: 1;
    padding: 0 1;
    margin-top: 1;
    height: 1fr;
}

/* ===================================================================
   The Ticket Rail - Chat History (Left Side)
   =================================================================== */

#ticket-rail {
    column-span: 1;
    row-span: 2;
    background: $secondary-bg;
    border: round $panel-border;
    border-title-color: $text-muted;
    border-title-align: center;
    padding: 1 2;
    overflow-y: auto;
    scrollbar-color: $accent;
    scrollbar-background: $primary-bg;
}

#ticket-rail:focus {
    border: round $accent;
}

/* Chat Messages - User (right accent), Assistant (left accent) */
Ticket.user {
    background: $surface;
    color: $text-primary;
    padding: 1 2;
    margin: 0 0 1 2;
    border-right: thick $accent;
}

Ticket.assistant {
    background: $surface;
    color: $text-primary;
    padding: 1 2;
    margin: 0 2 1 0;
    border-left: thick $purple;
}

Ticket.system {
    color: $text-muted;
    text-style: italic;
    padding: 1 2;
    margin-bottom: 1;
}

/* Legacy Static message classes (fallback) */
Static.user-message {
    background: $surface;
    padding: 1 2;
    margin: 0 0 1 2;
    border-right: thick $accent;
}

Static.system-message {
    color: $text-muted;
    text-style: italic;
    padding: 1 2;
    margin-bottom: 1;
}

Static.assistant-message {
    background: $surface;
    padding: 1 2;
    margin: 0 2 1 0;
    border-left: thick $purple;
}

.hidden {
    display: none;
}

.muted {
    color: $text-muted;
}

/* ===================================================================
   The Pass - Brigade Status (Top Right)
   =================================================================== */

#the-pass {
    column-span: 1;
    row-span: 1;
    background: $secondary-bg;
    border: round $panel-border;
    border-title-color: $text-muted;
    border-title-align: center;
    padding: 1 2;
}

#the-pass:focus {
    border: round $accent;
}

#pass-header {
    color: $text-muted;
    text-style: bold;
    margin-bottom: 1;
}

.station-row {
    height: auto;
    margin-bottom: 0;
    padding: 0;
}

.station-name {
    color: $text-primary;
    text-style: bold;
    width: 14;
}

.station-progress {
    width: 1fr;
    margin: 0 1;
}

.station-status {
    color: $text-muted;
    width: 12;
    text-align: right;
}

/* Station state colors */
.station-row.working .station-name {
    color: $warning;
}

.station-row.complete .station-name {
    color: $success;
}

.station-row.error .station-name {
    color: $error;
}

/* Progress bar styling */
ProgressBar > Bar {
    color: $accent;
    background: $surface;
}

ProgressBar > Bar > .bar--complete {
    color: $success;
}

/* ===================================================================
   The Plate - Code Output (Bottom Right)
   =================================================================== */

#the-plate {
    column-span: 1;
    row-span: 1;
    background: $secondary-bg;
    border: round $panel-border;
    border-title-color: $text-muted;
    border-title-align: center;
    padding: 0;
    overflow: auto;
    scrollbar-color: $accent;
    scrollbar-background: $primary-bg;
}

#the-plate:focus {
    border: round $accent;
}

/* TabbedContent styling */
TabbedContent {
    background: $secondary-bg;
}

TabPane {
    padding: 1;
}

Tabs {
    background: $surface;
}

Tab {
    background: $surface;
    color: $text-muted;
    padding: 0 2;
}

Tab:hover {
    background: $secondary-bg;
    color: $text-primary;
}

Tab.-active {
    background: $secondary-bg;
    color: $accent;
    text-style: bold;
}

#plate-code-scroll {
    background: $primary-bg;
    padding: 1;
}

#plate-empty {
    color: $text-muted;
    text-style: italic;
}

.file-path {
    color: $accent;
    text-style: bold;
    margin-bottom: 1;
}

#plate-terminal {
    background: $primary-bg;
    padding: 1;
}

#plate-notes {
    background: $primary-bg;
}

/* ===================================================================
   Header - Minimalist Kitchen Name Plate
   =================================================================== */

KitchenHeader {
    dock: top;
    height: 3;
    background: $secondary-bg;
    border-bottom: solid $panel-border;
    color: $text-primary;
    content-align: center middle;
    text-style: bold;
}

.header-title {
    color: $text-primary;
}

/* ===================================================================
   Whisk Loader - Smooth Loading Animation
   =================================================================== */

WhiskLoader {
    dock: bottom;
    height: 3;
    background: $secondary-bg;
    border-top: solid $panel-border;
    padding: 0 2;
    display: none;
}

WhiskLoader.visible {
    display: block;
}

WhiskLoader .whisk-spinner {
    color: $accent;
    text-style: bold;
    width: 6;
}

WhiskLoader .whisk-message {
    color: $text-muted;
    margin-left: 2;
}

/* ===================================================================
   Footer & Input - Modern Command Bar
   =================================================================== */

Footer {
    background: $secondary-bg;
    color: $text-muted;
    dock: bottom;
    height: 1;
}

CommandInput {
    dock: bottom;
    height: 3;
    background: $primary-bg;
    border: round $panel-border;
    padding: 0 2;
    color: $text-primary;
}

CommandInput:focus {
    border: round $accent;
}

/* ===================================================================
   Command Palette
   =================================================================== */

CommandPalette {
    align: center middle;
}

#command-palette-container {
    background: $secondary-bg;
    border: round $panel-border;
    padding: 1 2;
    width: 60;
    max-height: 20;
}
