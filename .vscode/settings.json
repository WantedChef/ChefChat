{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },
  // Global Instellingen
  "editor.formatOnSave": false, // <-- Uitschakelen, nu alleen in [python] sectie
  "editor.rulers": [
    88, // Visuele grens (vaak gebruikt door Ruff/Black)
    120
  ],
  "editor.stickyScroll.enabled": true, // Behoudt functiedefinities bij scrollen
  // Type Checking & Analysis
  "python.analysis.typeCheckingMode": "strict",
  "python.languageServer": "Pylance", // Expliciet Pylance
  "python.analysis.diagnosticMode": "workspace",
  // Bestandsbeheer
  "files.exclude": {
    ".pytest_cache/**": true,
    ".venv/**": true,
    "**/__pycache__": true,
    "dist/**": true,
    "build/**": true,
    "**/.git": true // Optioneel: verberg .git als dit stoort
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  // Testing
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.autoTestDiscoverOnSaveEnabled": true, // <-- Nieuw: sneller testen na opslaan
  // Ruff (Linter/Formatter)
  "ruff.enable": true,
  "ruff.organizeImports": true
}
